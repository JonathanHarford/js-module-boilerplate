{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
            "args": [
                "--runInBand"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "console": "internalConsole"
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outDir": null,
            "localRoot": "${workspaceRoot}/",
            "remoteRoot": "/app/"
        }
    ]
}